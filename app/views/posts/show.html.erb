<div class="content_all">
    <div class="row">
        <div class="col-md-2">
          <div class="rate">
            <button type="button" class="btn btn-default">Default</button>
            <button type="button" class="btn btn-default">Default</button>
          </div>
        </div>
        <div class="col-md-10">
              <div class="row">
                <div class="col-md-10">
                  <h3><%= @post.title%></h3>
                  <div class="post_description">
                    <h5><%= @post.description%></h5>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-10">
                  <h4><%= image_tag("/users/" + @post.user_id.to_s + "/" + @post.content, :alt => "meme") %></h4>
                </div>
              </div>
        </div>
    </div>
    <% if current_user%>
    <div class="row">
    	<div class="col-md-12">
    		<div class="comment_new_panel">
            <%= render 'comment_new' %>
        </div>
    	</div>
    </div>
    <% else %>
	    <div class="comment_new_panel">
	        <div class="input-group">
	        	<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Увійдіть, щоб додати комментар</h3>
				  </div>
				  <div class="panel-body">
	                <a class="btn btn-primary" href="<%= login_path %>"> Увійти </a>
				  </div>
				</div>
	        </div>
	    </div>
    <% end %>
    <div class="comment_all">
	    <% @comments.each do |comment|%>
	        <div class="comment_row" style="margin-left:<%= comment.answer.to_i * 5 %>px">
			    <div class="row">
			        <div class="col-md-1">
			            <%= image_tag("/users/" + comment.user.id.to_s + "/" + comment.user.avatar, size: "50", 
                  :alt => "avatar") %>
			        </div>
			        <div class="col-md-10">
			              <div class="row">
			                <div class="col-md-10">
			                  <h4> <%= comment.user.login %> </h4>
			                  <div class="post_description">
			                    <h5><%= comment.content %></h5>
			                  </div>
			                </div>
			              </div>
			        </div>
			    </div>
		    </div>
	    <%end%>
   </div>
</div>
<div class="par">
  <h3 class="clh1">parent</h3>
</div>